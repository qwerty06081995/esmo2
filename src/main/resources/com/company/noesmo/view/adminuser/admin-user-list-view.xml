<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://adminUserListView.title"
      focusComponent="adminUsersDataGrid">
    <data>
        <collection id="adminUsersDc"
                    class="com.company.noesmo.entity.AdminUser">
            <fetchPlan extends="_base"/>
            <loader id="adminUsersDl" readOnly="true">
                <query>
                    <![CDATA[select e from noesmo_AdminUser e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="adminUsersDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="adminUsersDataGrid.createAction"/>
            <button id="editButton" action="adminUsersDataGrid.editAction"/>
            <button id="refreshButton" action="adminUsersDataGrid.refreshAction"/>
            <button id="removeButton" action="adminUsersDataGrid.removeAction"/>
            <button id="showRoleAssignmentsButton" action="adminUsersDataGrid.showRoleAssignmentsAction"/>
            <dropdownButton id="additionalButton" text="msg://additionalMenu" icon="COG">
                <items>
                    <actionItem id="changePasswordItem" ref="adminUsersDataGrid.changePasswordAction"/>
                    <actionItem id="resetPasswordItem" ref="adminUsersDataGrid.resetPasswordAction"/>
                    <actionItem id="showUserSubstitutionsItem" ref="adminUsersDataGrid.showUserSubstitutionsAction"/>
                </items>
            </dropdownButton>
            <simplePagination id="pagination" dataLoader="adminUsersDl"/>
        </hbox>
        <dataGrid id="adminUsersDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="adminUsersDc"
                  columnReorderingAllowed="true"
                  selectionMode="MULTI">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="refreshAction" type="list_refresh"/>
                <action id="removeAction" type="list_remove"/>
                <action id="showRoleAssignmentsAction" type="sec_showRoleAssignments"/>
                <action id="changePasswordAction" type="sec_changePassword"/>
                <action id="resetPasswordAction" type="sec_resetPassword"/>
                <action id="showUserSubstitutionsAction" type="sec_showUserSubstitutions"/>
            </actions>
            <columns resizable="true">
                <column property="username"/>
                <column property="firstName"/>
                <column property="lastName"/>
                <column property="patronymic"/>
                <column property="email"/>
                <column property="active"/>
                <column property="timeZoneId"/>
                <column property="rowStatus"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
